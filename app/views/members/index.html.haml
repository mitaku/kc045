%h1= t(".header")
%table#members_table.table.table-striped
  %thead
    %tr
      %th.image_col
      %th= t(".name")
      %th= t(".comment")
      %th= t(".attend_parties")
      -# %th= t(".registered_at")
  %tbody
    - @members.each do |member|
      %tr
        %td.image_col= image_tag member.image
        %td= link_to member.screen_name, member_path(member.id)
        %td= member.profile.comment
        %td= member.profile.attend_parties? ? "â—‹" : nil
